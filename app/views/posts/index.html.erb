
<a href="/posts/new">글 쓰러가기</a>

<table class="table table-hover table-dark">
  <thead>
    <tr>
      <th scope="row">#</th>
      <td>게시글 제목</td>
      <td colspan="2">작성자</td>
    </tr>
  </thead>
  <tbody>
        <% @posts.each do |post| %>
        <tr>
          <th scope="row"><%= post.id %></th>
          <td><a href="/posts/<%= post.id %>"><%= post.title %></a></td>
          <td colspan="2"><%= post.user.username %></td>
        </tr>
        <% end %>
  </tbody>
</table>
